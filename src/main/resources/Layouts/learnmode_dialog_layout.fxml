<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="15" prefWidth="400" prefHeight="300" fx:controller="com.example.Controller.LearnmodeDialogController">
    <children>
        <!-- Beschreibung -->
        <Label fx:id="description" wrapText="true" textAlignment="CENTER" />

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button text="Upload" onAction="#onUploadClick" />
                <Button text="Download Template" onAction="#onDownloadTemplateClick" />
                <Button text="Cancel" onAction="#onCancelClick" />
            </children>
        </HBox>
    </children>
</VBox>