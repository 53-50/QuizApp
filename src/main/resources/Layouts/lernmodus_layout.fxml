<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller.LernmodusController">

    <children>
        <!-- Platzhalter für Abstand nach oben -->
        <Pane VBox.vgrow="ALWAYS" />

        <!-- Bereich für den Timer -->
        <HBox alignment="TOP_RIGHT" spacing="10" VBox.vgrow="NEVER">
            <children>
                <Label fx:id="timerLabel" text="00:00:00">
                    <padding>
                        <Insets right="100.0" />
                    </padding>
                </Label>
            </children>
        </HBox>

        <!-- Hauptbereich für die Frage, Eingabe und Buttons -->
        <VBox alignment="CENTER" spacing="10">
            <children>
                <Label fx:id="lblQuestion" text="Hier erscheint die Frage" />
                <TextField fx:id="txtAnswer" promptText="Gib hier deine Antwort ein" />
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Button fx:id="btnSubmit" onAction="#onSubmitClick" text="Antwort abschicken" />
                        <Button fx:id="btnBack" onAction="#onBackClick" text="Zurück zum Menü" />
                    </children>
                </HBox>
                <Label fx:id="lblResult" text="" visible="false" />
            </children>
        </VBox>

        <!-- Platzhalter für Abstand nach unten -->
        <Pane VBox.vgrow="ALWAYS" />

        <!-- Bereich für den Weiter-Button -->
        <HBox alignment="BOTTOM_RIGHT" spacing="10" VBox.vgrow="NEVER">
            <children>
                <Button fx:id="btnNext" text="Weiter" onAction="#onNextClick" visible="false">
                    <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>