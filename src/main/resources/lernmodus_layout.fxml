<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox fx:controller="com.example.Controller.LernmodusController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER" spacing="10">

    <Label text="Eigene Frage eingeben:"/>
    <TextField fx:id="txtQuestion" promptText="Fragetext"/>
    <TextField fx:id="txtCorrectAnswer" promptText="Korrekte Antwort"/>
    <TextField fx:id="txtWrongAnswers" promptText="Falsche Antworten (Komma-getrennt)"/>

    <Button text="Speichern" onAction="#onSaveClick"/>
    <Button text="Zurück zum Menü" onAction="#onBackClick"/>
</VBox>
