<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="10"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.example.Controller.MainMenuController"
      style="
        -fx-background-image: url(https://img.freepik.com/vektoren-kostenlos/nebel-transparenter-vektorgalaxie-sternhintergrund_107791-20522.jpg);
         -fx-background-repeat: no-repeat;
         -fx-background-size: cover;
      ">
<!-- fx-background-image: nimmt komischerweise wirklich nur URLs und keine lokalen-->

    <VBox alignment="CENTER" spacing="20"
          style="
            -fx-background-color: white;
            -fx-padding: 20;
            -fx-background-radius: 10;
            -fx-border-radius: 10;
          ">

        <Label text="Willkommen zum Quiz!" />

        <!-- HBox to arrange RadioButtons horizontally -->
        <HBox alignment="CENTER" spacing="10"
              style="-fx-background-color: white;"> <!-- optional, if you want the HBox also white -->
            <RadioButton fx:id="rbEasy" text="Leicht" />
            <RadioButton fx:id="rbMedium" text="Mittel" />
            <RadioButton fx:id="rbHard" text="Schwer" />
            <RadioButton fx:id="rbLearnMode" text="Lernmodus" />
        </HBox>

        <Button onAction="#onStartQuizClick" text="Spiel starten" />
        <Button onAction="#onExitClick"       text="Beenden"       />
    </VBox>

</VBox>
